---
// filepath: src/pages/contact.astro
import DefaultLayout from "../layouts/DefaultLayout.astro";

const PHONE_NUMBER = "56938980598";
const EMAIL_ADDRESS = "info@rentas.com";
---

<DefaultLayout title="Contact - Rentas">
  <div class="min-h-screen bg-gray-50 p-4 md:p-8">
    <div class="max-w-7xl mx-auto">
      <!-- Minimal Header -->
      <div class="mb-8 md:mb-12">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-2">
          Get in
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-purple-600">
            Touch
          </span>
        </h1>
        <p class="text-gray-600 text-xl">
          We're here to help you find the perfect place.
        </p>
      </div>

      <!-- Asymmetric Bento Grid -->
      <div class="grid grid-cols-1 md:grid-cols-6 lg:grid-cols-8 gap-4 md:gap-6">
        <!-- Large Contact Form -->
        <div class="md:col-span-4 lg:col-span-5 bg-white rounded-3xl p-8 shadow-sm">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
              Send us a message
            </h2>
            <p class="text-gray-600">
              We'll get back to you as soon as possible.
            </p>
          </div>

          <form id="contact-form" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <input
                  type="text"
                  name="name"
                  required
                  class="w-full px-0 py-4 border-0 border-b-2 border-gray-200 focus:border-pink-500 focus:ring-0 bg-transparent text-lg placeholder-gray-400 transition-all"
                  placeholder="Your name"
                />
              </div>
              <div>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full px-0 py-4 border-0 border-b-2 border-gray-200 focus:border-pink-500 focus:ring-0 bg-transparent text-lg placeholder-gray-400 transition-all"
                  placeholder="Your email"
                />
              </div>
            </div>

            <div>
              <select
                name="inquiry-type"
                required
                class="w-full px-0 py-4 border-0 border-b-2 border-gray-200 focus:border-pink-500 focus:ring-0 bg-transparent text-lg transition-all"
              >
                <option value="">What do you need help with?</option>
                <option value="booking">Property Booking</option>
                <option value="info">General Information</option>
                <option value="support">Customer Support</option>
                <option value="partnership">Property Partnership</option>
              </select>
            </div>

            <div>
              <textarea
                name="message"
                rows="4"
                required
                class="w-full px-0 py-4 border-0 border-b-2 border-gray-200 focus:border-pink-500 focus:ring-0 bg-transparent text-lg placeholder-gray-400 resize-none transition-all"
                placeholder="Your message..."
              ></textarea>
            </div>

            <div class="pt-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <button
                  type="button"
                  id="whatsapp-btn"
                  class="group relative overflow-hidden bg-green-500 hover:bg-green-600 text-white font-semibold py-4 px-8 rounded-2xl transition-all transform hover:scale-105"
                >
                  <span class="flex items-center justify-center gap-2">
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
                      ></path>
                    </svg>
                    Send via WhatsApp
                  </span>
                </button>
                <button
                  type="button"
                  id="email-btn"
                  class="group relative overflow-hidden bg-blue-500 hover:bg-blue-600 text-white font-semibold py-4 px-8 rounded-2xl transition-all transform hover:scale-105"
                >
                  <span class="flex items-center justify-center gap-2">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                    Send via Email
                  </span>
                </button>
              </div>
            </div>
          </form>
        </div>

        <!-- Stacked Side Bentos -->
        <div class="md:col-span-2 lg:col-span-3 space-y-4 md:space-y-6">
          <!-- Contact Methods Card -->
          <div class="bg-white rounded-3xl p-6 shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-900 text-lg mb-4">Direct Contact</h3>
            <div class="space-y-4">
              <div class="flex items-center gap-4 p-3 bg-green-50 rounded-2xl hover:bg-green-100 transition-colors cursor-pointer" id="quick-chat">
                <div class="w-12 h-12 bg-green-500 rounded-2xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900">WhatsApp</p>
                  <p class="text-sm text-gray-600">Instant support</p>
                </div>
                <span class="text-green-500 font-semibold">→</span>
              </div>
              
              <div class="flex items-center gap-4 p-3 bg-blue-50 rounded-2xl hover:bg-blue-100 transition-colors">
                <div class="w-12 h-12 bg-blue-500 rounded-2xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-900">Email</p>
                  <p class="text-sm text-gray-600 font-mono">info@rentas.com</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Trust Signals Bento -->
          <div class="bg-gradient-to-br from-purple-400 to-pink-500 rounded-3xl p-6 text-white">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                </svg>
              </div>
              <div>
                <div class="font-bold text-lg">Fast Response</div>
                <div class="text-sm opacity-90">Usually within 1 hour</div>
              </div>
            </div>
            <div class="bg-white/20 backdrop-blur-sm rounded-xl p-3">
              <div class="text-xs opacity-75 mb-1">Average response time</div>
              <div class="text-2xl font-bold">&lt; 1 hour</div>
            </div>
          </div>

          <!-- Why Choose Us Bento -->
          <div class="bg-white rounded-3xl p-6 shadow-sm border border-gray-100">
            <h3 class="font-bold text-gray-900 text-lg mb-4">Why Choose Us?</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <span class="text-2xl">⚡</span>
                <div>
                  <p class="font-semibold text-sm">Lightning Fast</p>
                  <p class="text-xs text-gray-600">Instant responses</p>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-2xl">🏆</span>
                <div>
                  <p class="font-semibold text-sm">Expert Help</p>
                  <p class="text-xs text-gray-600">Professional advice</p>
                </div>
              </div>
              <div class="flex items-center gap-3">
                <span class="text-2xl">🔒</span>
                <div>
                  <p class="font-semibold text-sm">Secure</p>
                  <p class="text-xs text-gray-600">Safe bookings</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const PHONE_NUMBER = "56938980598";
    const EMAIL_ADDRESS = "info@rentas.com";

    // Form utilities
    function getFormData() {
      const form = document.getElementById("contact-form") as HTMLFormElement;
      if (!form) return null;
      
      const formData = new FormData(form);
      return {
        name: (formData.get("name") as string) || "",
        email: (formData.get("email") as string) || "",
        inquiryType: (formData.get("inquiry-type") as string) || "",
        message: (formData.get("message") as string) || "",
      };
    }

    function validateForm(): boolean {
      const form = document.getElementById("contact-form");
      if (!form) return false;
      
      const requiredFields = form.querySelectorAll("[required]");
      let isValid = true;
      
      requiredFields.forEach((field) => {
        const input = field as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
        if (!input.value.trim()) {
          input.classList.add("border-red-300", "focus:border-red-500");
          input.classList.remove("border-gray-200", "focus:border-pink-500");
          isValid = false;
        } else {
          input.classList.remove("border-red-300", "focus:border-red-500");
          input.classList.add("border-gray-200", "focus:border-pink-500");
        }
      });
      
      if (!isValid) {
        showNotification("Please fill in all required fields", "error");
      }
      
      return isValid;
    }

    function showNotification(message: string, type: "success" | "error" = "success"): void {
      const colors = {
        success: "bg-green-500",
        error: "bg-red-500",
      };

      const notification = document.createElement("div");
      notification.className = `fixed top-4 right-4 ${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50 transform translate-x-full transition-transform duration-300`;
      notification.innerHTML = `
        <div class="flex items-center gap-2">
          <span>${message}</span>
          <button onclick="this.parentElement.parentElement.remove()" class="ml-2 text-white/80 hover:text-white">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      `;

      document.body.appendChild(notification);

      // Animate in
      setTimeout(() => {
        notification.classList.remove("translate-x-full");
      }, 100);

      // Auto remove
      setTimeout(() => {
        if (document.body.contains(notification)) {
          notification.classList.add("translate-x-full");
          setTimeout(() => {
            if (document.body.contains(notification)) {
              document.body.removeChild(notification);
            }
          }, 300);
        }
      }, 4000);
    }

    function clearForm(): void {
      const form = document.getElementById("contact-form") as HTMLFormElement;
      if (form) {
        form.reset();
        // Remove error styles
        const fields = form.querySelectorAll("input, select, textarea");
        fields.forEach((field) => {
          field.classList.remove("border-red-300", "focus:border-red-500");
          field.classList.add("border-gray-200", "focus:border-pink-500");
        });
      }
    }

    // Event handlers
    document.getElementById("whatsapp-btn")?.addEventListener("click", () => {
      if (!validateForm()) return;
      
      const data = getFormData();
      if (!data) return;

      const message = `🏠 *RENTAS INQUIRY*

👤 Name: ${data.name}
📧 Email: ${data.email}
📋 Type: ${data.inquiryType}

💬 Message:
${data.message}

⏰ ${new Date().toLocaleString()}
🌐 From: rentas.com/contact`;

      window.open(
        `https://wa.me/${PHONE_NUMBER}?text=${encodeURIComponent(message)}`,
        "_blank"
      );
      
      showNotification("✅ Redirecting to WhatsApp...", "success");
      setTimeout(() => clearForm(), 1000);
    });

    document.getElementById("quick-chat")?.addEventListener("click", () => {
      const message = `Hi! I'm interested in your rental properties and would like to get more information.

Sent from: rentas.com/contact
Time: ${new Date().toLocaleString()}`;

      window.open(
        `https://wa.me/${PHONE_NUMBER}?text=${encodeURIComponent(message)}`,
        "_blank"
      );
    });

    document.getElementById("email-btn")?.addEventListener("click", () => {
      if (!validateForm()) return;
      
      const data = getFormData();
      if (!data) return;

      const subject = `${data.inquiryType} Inquiry - ${data.name}`;
      const body = `Hello Rentas Team,

Name: ${data.name}
Email: ${data.email}
Inquiry Type: ${data.inquiryType}

Message:
${data.message}

Sent from: rentas.com/contact
Time: ${new Date().toLocaleString()}

Best regards,
${data.name}`;

      window.open(
        `mailto:${EMAIL_ADDRESS}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`,
        "_blank"
      );
      
      showNotification("✅ Opening email client...", "success");
      setTimeout(() => clearForm(), 1000);
    });

    // Real-time validation
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("contact-form");
      if (form) {
        const fields = form.querySelectorAll("input[required], select[required], textarea[required]");
        
        fields.forEach((field) => {
          field.addEventListener("blur", () => {
            const input = field as HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement;
            if (!input.value.trim()) {
              input.classList.add("border-red-300", "focus:border-red-500");
              input.classList.remove("border-gray-200", "focus:border-pink-500");
            } else {
              input.classList.remove("border-red-300", "focus:border-red-500");
              input.classList.add("border-gray-200", "focus:border-pink-500");
            }
          });
        });
      }
    });
  </script>
</DefaultLayout>
