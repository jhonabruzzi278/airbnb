---
interface Props {
  price: string;
  image: string;
  location: string;
  slug: string;
}

const { price, image, location, slug }: Props = Astro.props;
---

<a 
  href={`/listing/${slug}`} 
  class="group block bg-white rounded-xl lg:rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 active:scale-95 lg:hover:scale-[1.02]"
>
  <!-- Image container - Mobile optimized aspect ratio -->
  <div class="relative aspect-[4/3] lg:aspect-[3/2] overflow-hidden">
    <img 
      src={image} 
      alt={location}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
    
    <!-- Price badge - Smaller on mobile -->
    <div class="absolute top-2 left-2 lg:top-3 lg:left-3">
      <span class="bg-white/95 backdrop-blur-sm text-gray-900 font-semibold px-2 py-1 lg:px-3 lg:py-1.5 rounded-full text-xs lg:text-sm shadow-sm">
        ${price}/night
      </span>
    </div>

    <!-- Favorite button - Touch optimized -->
    <button class="absolute top-2 right-2 lg:top-3 lg:right-3 w-8 h-8 lg:w-10 lg:h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-sm hover:bg-white transition-colors duration-200 group/fav">
      <svg class="w-4 h-4 lg:w-5 lg:h-5 text-gray-600 group-hover/fav:text-pink-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
      </svg>
    </button>
  </div>

  <!-- Content - Compact for mobile -->
  <div class="p-3 lg:p-4">
    <!-- Location - Single line with ellipsis on mobile -->
    <h3 class="font-semibold text-gray-900 text-sm lg:text-base mb-1 lg:mb-2 truncate">
      {location}
    </h3>
    
    <!-- Rating - Compact -->
    <div class="flex items-center gap-1 mb-2">
      <div class="flex items-center gap-0.5">
        {[...Array(5)].map((_, i) => (
          <svg class="w-3 h-3 lg:w-4 lg:h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        ))}
      </div>
      <span class="text-xs lg:text-sm text-gray-600 ml-1">4.8 (24)</span>
    </div>

    <!-- Features - Show only on desktop -->
    <div class="hidden lg:flex items-center gap-3 text-xs text-gray-500 mb-2">
      <span class="flex items-center gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.125 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
        </svg>
        2 beds
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
        </svg>
        1 bath
      </span>
    </div>

    <!-- Mobile-only quick info -->
    <div class="lg:hidden flex items-center justify-between text-xs text-gray-500">
      <span>2 beds â€¢ 1 bath</span>
      <span class="font-medium text-gray-700">Available</span>
    </div>
  </div>
</a>
