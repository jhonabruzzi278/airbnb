---
// filepath: src/components/CarCategoryCard.astro
import { Icon } from "astro-icon/components";

export interface Props {
  label: string;
  icon: string;
  link: string;
}
const { label, icon, link } = Astro.props as Props;
---

<article class="group">
  <a
    href={`/cars/category/${link}`}
    aria-label={`Browse ${label} cars`}
    class="flex flex-col items-center p-5 rounded-lg
           bg-white border border-gray-100 hover:border-gray-200
           hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-1
           transition-all duration-200"
  >
    <!-- Icono container -->
    <div
      class="w-10 h-10 bg-gray-50 rounded-lg flex items-center justify-center mb-4 group-hover:bg-gray-100 transition-colors duration-200"
    >
      <Icon
        name={icon}
        size={18}
        class="text-gray-600 group-hover:text-gray-800 transition-colors duration-200"
      />
    </div>

    <!-- Label -->
    <span
      class="text-sm font-medium text-gray-700 group-hover:text-gray-900 transition-colors duration-200 text-center"
    >
      {label}
    </span>
  </a>
</article>
