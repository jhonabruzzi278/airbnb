---
// filepath: src/components/CarCard.astro
export interface Props {
  title: string;
  year: number;
  price: string;
  image: string;
  category: string;
  passengers: number;
  transmission: string;
  fuelType: string;
  slug: string;
  brand?: string;
  model?: string;
}

const {
  title,
  year,
  price,
  image,
  category,
  passengers,
  transmission,
  fuelType,
  slug,
  brand,
  model,
} = Astro.props;
---

<article
  class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 overflow-hidden border border-gray-100 hover:border-blue-200"
>
  <!-- Imagen -->
  <div class="relative overflow-hidden">
    <img
      src={image}
      alt={`${title} ${year} - ${category} car rental`}
      class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
      loading="lazy"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>

    <!-- Badge de precio -->
    <div class="absolute top-4 right-4">
      <span
        class="bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-semibold text-gray-900"
      >
        €{price}/day
      </span>
    </div>

    <!-- Favorito -->
    <button
      type="button"
      class="absolute top-4 left-4 p-2 bg-white/90 backdrop-blur-sm rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-white hover:scale-110"
      aria-label={`Add ${title} to favorites`}
    >
      <svg
        class="w-4 h-4 text-gray-600 hover:text-blue-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
        ></path>
      </svg>
    </button>

    <!-- Badge de categoría -->
    <div class="absolute bottom-4 left-4">
      <span
        class="bg-zinc-900/95 backdrop-blur-sm text-white px-2 py-1 rounded-lg text-xs font-medium capitalize shadow-lg border border-zinc-700/50"
      >
        {category}
      </span>
    </div>

    <!-- Badge de año -->
    <div class="absolute bottom-4 right-4">
      <span
        class="bg-gray-900/90 backdrop-blur-sm text-white px-3 py-1 rounded-full text-xs font-medium"
      >
        {year}
      </span>
    </div>
  </div>

  <!-- Contenido -->
  <div class="p-6">
    <div class="mb-4">
      <h2
        class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300"
      >
        {title}
      </h2>
      <div class="text-sm text-gray-600 mb-3">
        {year} • {brand || ""}
        {model || ""}
      </div>
    </div>

    <!-- Detalles rápidos -->
    <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
      <div class="flex items-center gap-4">
        <span class="flex items-center gap-1">
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"
            ></path>
          </svg>
          {passengers}
        </span>
        <span class="flex items-center gap-1">
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {transmission}
        </span>
      </div>

      <!-- Fuel Type -->
      <div class="flex items-center gap-1">
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-xs capitalize">{fuelType}</span>
      </div>
    </div>

    <!-- Precio y botón -->
    <div class="flex items-center justify-between">
      <div>
        <span class="text-2xl font-bold text-gray-900">€{price}</span>
        <span class="text-gray-500 text-sm"> /day</span>
      </div>
      <a
        href={`/cars/${slug}`}
        class="bg-gradient-to-r from-blue-500 to-cyan-600 hover:from-blue-600 hover:to-cyan-700 text-white py-2 px-4 rounded-lg font-medium transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg text-sm"
        aria-label={`View details for ${title}`}
      >
        lol
      </a>
    </div>
  </div>
</article>
