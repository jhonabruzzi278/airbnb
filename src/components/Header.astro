---
// src/components/Header.astro
import { SignedIn, SignedOut, UserButton } from "@clerk/astro/components";
---

<header class="sticky top-0 z-50 bg-white shadow-md">
  <nav class="px-4 lg:px-6 py-4 lg:py-5">
    <div class="flex items-center justify-between w-full max-w-7xl mx-auto">
      <!-- Logo -->
      <div class="flex items-center gap-3">
        <a
          href="/"
          class="flex items-center gap-3 group"
          aria-label="ViajaHub - Go to homepage"
        >
          <div
            class="w-11 h-11 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 rounded-xl flex items-center justify-center group-hover:scale-105 transition-all duration-300 shadow-lg"
          >
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl font-bold text-gray-900">ViajaAhora</h1>
            <p class="text-xs text-gray-600 -mt-1 font-medium">
              Experiences & More
            </p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center">
        <nav
          class="flex items-center gap-2"
          role="navigation"
          aria-label="Main navigation"
        >
          <a
            href="/"
            class="flex items-center gap-2 px-4 py-3 rounded-xl text-gray-900 hover:text-blue-700 hover:bg-blue-50 transition-all duration-200 font-semibold text-sm"
            aria-current="page"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            Home
          </a>

          <a
            href="/experiences"
            class="flex items-center gap-2 px-4 py-3 rounded-xl text-gray-900 hover:text-orange-700 hover:bg-orange-50 transition-all duration-200 font-semibold text-sm"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
              ></path>
            </svg>
            Experiences
          </a>

          <a
            href="/listing"
            class="flex items-center gap-2 px-4 py-3 rounded-xl text-gray-900 hover:text-pink-700 hover:bg-pink-50 transition-all duration-200 font-semibold text-sm"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
              ></path>
            </svg>
            Rentals
          </a>

          <a
            href="/cars"
            class="flex items-center gap-2 px-4 py-3 rounded-xl text-gray-900 hover:text-emerald-700 hover:bg-emerald-50 transition-all duration-200 font-semibold text-sm"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            Cars
          </a>
        </nav>
      </div>

      <div class="flex items-center gap-3 lg:gap-4">
        <SignedOut isStatic={true}>
          <div class="hidden lg:flex items-center gap-4">
            <a
              href="/contact"
              class="px-4 py-2.5 text-gray-900 hover:text-blue-700 font-semibold transition-colors duration-200 rounded-xl hover:bg-gray-50 text-sm"
            >
              Contact Us
            </a>
            <a
              href="/login"
              class="px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:shadow-lg transition-all duration-300 font-bold text-sm transform hover:-translate-y-0.5 focus:ring-4 focus:ring-blue-300"
            >
              Book Now - Free Quote
            </a>
          </div>

          <div class="lg:hidden">
            <a
              href="/contact"
              class="px-5 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl text-sm font-bold shadow-md hover:shadow-lg transition-all duration-300 focus:ring-4 focus:ring-blue-300"
            >
              Book Now
            </a>
          </div>
        </SignedOut>

        <SignedIn isStatic={true}>
          <div class="flex items-center gap-3">
            <!-- Contact CTA for logged users -->
            <div class="hidden lg:block">
              <a
                href="/contact"
                class="px-4 py-2.5 bg-gradient-to-r from-emerald-600 to-teal-600 text-white rounded-xl text-sm font-bold hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 focus:ring-4 focus:ring-emerald-300"
              >
                Plan Your Trip
              </a>
            </div>

            <div class="flex items-center">
              <UserButton
                appearance={{
                  elements: {
                    avatarBox:
                      "w-10 h-10 rounded-xl border-2 border-gray-300 hover:border-blue-500 transition-all duration-300 shadow-sm hover:shadow-md",
                    userButtonPopoverCard:
                      "shadow-2xl border border-gray-200 rounded-2xl backdrop-blur-lg",
                    userButtonPopoverActionButton:
                      "hover:bg-blue-50 rounded-xl transition-colors duration-200",
                  },
                }}
              />
            </div>
          </div>
        </SignedIn>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="lg:hidden relative p-3 text-gray-700 hover:text-blue-700 hover:bg-blue-50 rounded-xl transition-all duration-200 group focus:ring-4 focus:ring-blue-300"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
        >
          <div class="w-6 h-6 flex flex-col justify-center items-center">
            <span
              class="bg-current block transition-all duration-300 ease-out h-0.5 w-6 rounded-sm"
              id="line1"></span>
            <span
              class="bg-current block transition-all duration-300 ease-out h-0.5 w-6 rounded-sm my-0.5"
              id="line2"></span>
            <span
              class="bg-current block transition-all duration-300 ease-out h-0.5 w-6 rounded-sm"
              id="line3"></span>
          </div>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="lg:hidden fixed inset-0 z-50 opacity-0 pointer-events-none transition-opacity duration-300"
    aria-hidden="true"
  >
    <!-- Dark backdrop -->
    <div
      class="absolute inset-0 bg-gray-900/70 backdrop-blur-sm"
      id="mobile-menu-backdrop"
    >
    </div>

    <!-- Menu panel -->
    <div
      class="fixed right-0 top-0 h-full w-full max-w-sm bg-white shadow-2xl transform translate-x-full transition-transform duration-300 ease-out overflow-y-auto"
      id="mobile-menu-panel"
      role="dialog"
      aria-modal="true"
      aria-labelledby="mobile-menu-title"
    >
      <!-- Mobile Menu Header -->
      <div
        class="flex items-center justify-between p-6 border-b border-gray-200 bg-gray-50"
      >
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 rounded-xl flex items-center justify-center shadow-lg"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
          </div>
          <div>
            <span class="font-bold text-lg text-gray-900" id="mobile-menu-title"
              >ViajaHub</span
            >
            <p class="text-xs text-gray-600 font-medium">Experiences & More</p>
          </div>
        </div>
        <button
          id="close-mobile-menu"
          class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-xl transition-all duration-200 focus:ring-4 focus:ring-red-300"
          aria-label="Close menu"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu Content -->
      <div class="p-6">
        <!-- Navigation Links -->
        <nav
          class="space-y-3 mb-8"
          role="navigation"
          aria-label="Mobile navigation"
        >
          <a
            href="/"
            class="flex items-center gap-4 px-4 py-4 rounded-xl text-gray-900 hover:text-blue-700 hover:bg-blue-50 transition-all duration-200 font-semibold group"
          >
            <div
              class="w-12 h-12 bg-gray-100 group-hover:bg-blue-100 rounded-xl flex items-center justify-center transition-colors duration-200"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
            </div>
            <div>
              <div class="font-bold text-base">Home</div>
              <div class="text-sm text-gray-600">Start your journey</div>
            </div>
          </a>

          <a
            href="/experiences"
            class="flex items-center gap-4 px-4 py-4 rounded-xl text-gray-900 hover:text-orange-700 hover:bg-orange-50 transition-all duration-200 font-semibold group"
          >
            <div
              class="w-12 h-12 bg-gray-100 group-hover:bg-orange-100 rounded-xl flex items-center justify-center transition-colors duration-200"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                ></path>
              </svg>
            </div>
            <div>
              <div class="font-bold text-base">Experiences</div>
              <div class="text-sm text-gray-600">Amazing adventures</div>
            </div>
          </a>

          <a
            href="/listing"
            class="flex items-center gap-4 px-4 py-4 rounded-xl text-gray-900 hover:text-pink-700 hover:bg-pink-50 transition-all duration-200 font-semibold group"
          >
            <div
              class="w-12 h-12 bg-gray-100 group-hover:bg-pink-100 rounded-xl flex items-center justify-center transition-colors duration-200"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                ></path>
              </svg>
            </div>
            <div>
              <div class="font-bold text-base">Rentals</div>
              <div class="text-sm text-gray-600">Perfect places to stay</div>
            </div>
          </a>

          <a
            href="/cars"
            class="flex items-center gap-4 px-4 py-4 rounded-xl text-gray-900 hover:text-emerald-700 hover:bg-emerald-50 transition-all duration-200 font-semibold group"
          >
            <div
              class="w-12 h-12 bg-gray-100 group-hover:bg-emerald-100 rounded-xl flex items-center justify-center transition-colors duration-200"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <div class="font-bold text-base">Cars</div>
              <div class="text-sm text-gray-600">Rent a car today</div>
            </div>
          </a>
        </nav>

        <div class="border-t border-gray-200 pt-6 space-y-4">
          <SignedOut isStatic={true}>
            <a
              href="/login"
              class="flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5 focus:ring-4 focus:ring-blue-300"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                ></path>
              </svg>
              Book Your Adventure
            </a>
          </SignedOut>

          <SignedIn isStatic={true}>
            <a
              href="/contact"
              class="flex items-center justify-center gap-3 px-6 py-4 bg-gradient-to-r from-emerald-600 to-teal-600 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5 focus:ring-4 focus:ring-emerald-300"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              Plan Your Next Trip
            </a>
          </SignedIn>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Enhanced JavaScript for mobile menu -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileMenuPanel = document.getElementById("mobile-menu-panel");
    const closeMobileMenu = document.getElementById("close-mobile-menu");
    const backdrop = document.getElementById("mobile-menu-backdrop");

    const line1 = document.getElementById("line1");
    const line2 = document.getElementById("line2");
    const line3 = document.getElementById("line3");

    let isMenuOpen = false;

    // Open mobile menu
    mobileMenuButton?.addEventListener("click", () => {
      isMenuOpen = true;
      updateMenuState();
    });

    // Close mobile menu
    function closeMenu() {
      isMenuOpen = false;
      updateMenuState();
    }

    function updateMenuState() {
      if (isMenuOpen) {
        // Open menu
        mobileMenu?.classList.remove("opacity-0", "pointer-events-none");
        mobileMenu?.classList.add("opacity-100");
        mobileMenuPanel?.classList.remove("translate-x-full");
        mobileMenuPanel?.classList.add("translate-x-0");
        mobileMenu?.setAttribute("aria-hidden", "false");
        mobileMenuButton?.setAttribute("aria-expanded", "true");
        document.body.style.overflow = "hidden";

        // Animate hamburger to X
        line1?.style.setProperty(
          "transform",
          "rotate(45deg) translate(5px, 5px)"
        );
        line2?.style.setProperty("opacity", "0");
        line3?.style.setProperty(
          "transform",
          "rotate(-45deg) translate(7px, -6px)"
        );
      } else {
        // Close menu
        mobileMenu?.classList.add("opacity-0", "pointer-events-none");
        mobileMenu?.classList.remove("opacity-100");
        mobileMenuPanel?.classList.add("translate-x-full");
        mobileMenuPanel?.classList.remove("translate-x-0");
        mobileMenu?.setAttribute("aria-hidden", "true");
        mobileMenuButton?.setAttribute("aria-expanded", "false");
        document.body.style.overflow = "auto";

        // Animate X back to hamburger
        line1?.style.setProperty("transform", "rotate(0) translate(0, 0)");
        line2?.style.setProperty("opacity", "1");
        line3?.style.setProperty("transform", "rotate(0) translate(0, 0)");
      }
    }

    closeMobileMenu?.addEventListener("click", closeMenu);
    backdrop?.addEventListener("click", closeMenu);

    // Close with ESC key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isMenuOpen) {
        closeMenu();
      }
    });

    // Close menu when clicking on navigation links
    const mobileLinks = mobileMenu?.querySelectorAll("a");
    mobileLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        setTimeout(closeMenu, 150);
      });
    });

    // Focus management
    mobileMenuButton?.addEventListener("click", () => {
      if (isMenuOpen) {
        setTimeout(() => {
          closeMobileMenu?.focus();
        }, 300);
      }
    });

    closeMobileMenu?.addEventListener("click", () => {
      setTimeout(() => {
        mobileMenuButton?.focus();
      }, 300);
    });
  });
</script>
