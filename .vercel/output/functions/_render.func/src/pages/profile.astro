---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import { SignOutButton, SignedIn, SignedOut } from "@clerk/astro/components";

export const prerender = false;


const { userId } = Astro.locals.auth();
const user = await Astro.locals.currentUser();
---

<DefaultLayout title="My Profile - Account Settings">
  <SignedIn isStatic={false} >
    <div class="min-h-screen bg-gray-50 py-12">
      <div class="max-w-4xl mx-auto px-4">
        <!-- Header del perfil -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              {user?.imageUrl && (
                <img 
                  src={user.imageUrl} 
                  alt={`${user.firstName} ${user.lastName} profile picture`}
                  class="w-16 h-16 rounded-full object-cover border-2 border-gray-200" 
                />
              )}
              <div>
                <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
                <p class="text-gray-600 mt-1">Manage your account settings</p>
              </div>
            </div>
            <SignOutButton class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors font-medium">
              Sign Out
            </SignOutButton>
          </div>
        </div>

        <!-- Información del usuario -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Information</h2>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <p class="text-lg text-gray-900">{user?.firstName} {user?.lastName}</p>
            </div>
            {user?.primaryEmailAddress && (
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <p class="text-gray-900">{user.primaryEmailAddress.emailAddress}</p>
              </div>
            )}
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Active
              </span>
            </div>
          </div>
        </div>

        <!-- Mis reservas -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">My Bookings</h2>
          <div class="text-center py-8">
            <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <p class="text-gray-500 mb-4">No bookings yet</p>
            <a href="/" class="inline-block bg-pink-500 hover:bg-pink-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
              Browse Properties
            </a>
          </div>
        </div>

        <!-- Configuración -->
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Settings</h2>
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <div>
                <span class="text-gray-900 font-medium">Email notifications</span>
                <p class="text-sm text-gray-500">Receive booking confirmations and updates</p>
              </div>
              <button 
                type="button"
                class="bg-gray-200 relative inline-flex h-6 w-11 items-center rounded-full transition-colors hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2"
                aria-label="Toggle email notifications"
              >
                <span class="inline-block h-4 w-4 transform bg-white rounded-full transition translate-x-1"></span>
              </button>
            </div>
            <div class="flex items-center justify-between">
              <div>
                <span class="text-gray-900 font-medium">Marketing emails</span>
                <p class="text-sm text-gray-500">Get deals and special offers</p>
              </div>
              <button 
                type="button"
                class="bg-gray-200 relative inline-flex h-6 w-11 items-center rounded-full transition-colors hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2"
                aria-label="Toggle marketing emails"
              >
                <span class="inline-block h-4 w-4 transform bg-white rounded-full transition translate-x-1"></span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </SignedIn>

  <SignedOut isStatic={false}>
    <div class="min-h-screen flex items-center justify-center bg-gray-50">
      <div class="text-center max-w-md mx-auto px-4">
        <div class="bg-red-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Access Denied</h1>
        <p class="text-gray-600 mb-6">You need to sign in to access your profile</p>
        <div class="space-y-3">
          <a href="/login" class="block bg-pink-500 hover:bg-pink-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
            Sign In
          </a>
          <a href="/" class="block text-gray-500 hover:text-gray-700 transition-colors">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </SignedOut>
</DefaultLayout>